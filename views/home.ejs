            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-logo img {
            height: 40px;
        }

        .navbar-search input {
            padding: 8px 16px;
            background: #efefef;
            border: none;
            border-radius: 8px;
            width: 268px;
            font-size: 14px;
            outline: none;
        }

        .navbar-icons {
            display: flex;
            gap: 22px;
            align-items: center;
        }

        .navbar-icons svg {
            cursor: pointer;
        }

        .navbar-icons .profile-pic {
            width: 28px;
            height: 28px;
            border-radius: 50%;
            cursor: pointer;
            object-fit: cover;
        }

        /* Main Content */
        .main-container {
            max-width: 975px;
            margin: 90px auto 0;
            padding: 0 20px;
            display: flex;
            gap: 30px;
        }

        .feed-section {
            flex: 1;
            max-width: 614px;
        }

        /* Welcome Message */
        .welcome-message {
            background: linear-gradient(45deg, #405de6, #5851db, #833ab4, #c13584, #e1306c, #fd1d1d);
            color: white;
            padding: 25px;
            border-radius: 12px;
            margin-bottom: 24px;
            text-align: center;
        }

        .welcome-message h2 {
            margin-bottom: 10px;
            font-size: 24px;
        }

        .welcome-message p {
            opacity: 0.9;
        }

        /* Stories */
        .stories {
            background: white;
            border: 1px solid #dbdbdb;
            border-radius: 8px;
            padding: 16px;
            margin-bottom: 24px;
            display: flex;
            gap: 15px;
            overflow-x: auto;
        }

        .stories::-webkit-scrollbar {
            display: none;
        }

        .story {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-width: 66px;
            cursor: pointer;
        }

        .story-ring {
            width: 66px;
            height: 66px;
            border-radius: 50%;
            background: linear-gradient(45deg, #f09433, #e6683c, #dc2743, #cc2366, #bc1888);
            padding: 3px;
        }

        .story-ring img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 3px solid white;
            object-fit: cover;
        }

        .story span {
            font-size: 12px;
            margin-top: 5px;
            max-width: 66px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

