            padding: 14px 16px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .post-header-left {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .post-header img {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            object-fit: cover;
        }

        .post-header span {
            font-weight: 600;
            font-size: 14px;
        }

        .post-header svg {
            cursor: pointer;
        }

        .post-image {
            width: 100%;
            max-height: 600px;
            object-fit: cover;
        }

